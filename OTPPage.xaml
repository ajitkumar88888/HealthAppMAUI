<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHealth.OTPPage"
             Title="OTPPage" NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="otp.png">
    <VerticalStackLayout Margin="0,590,0,0">
        <HorizontalStackLayout HorizontalOptions="Center">
            <Entry x:Name="txtO" WidthRequest="50" Keyboard="Numeric" Placeholder="O" MaxLength="1" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtT" WidthRequest="50" Keyboard="Numeric" Placeholder="T" MaxLength="1" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtP" WidthRequest="50" Keyboard="Numeric" Placeholder="P" MaxLength="1" HorizontalTextAlignment="Center" Completed="Entry_Completed"/>
        </HorizontalStackLayout>
        <Label Margin="0,10,0,0" HorizontalTextAlignment="Center" WidthRequest="250" Text="please enter the 3 digit otp sent on your email id." />
    </VerticalStackLayout>
</ContentPage>